        <li>
            <a>
                <label>
                    <input type="checkbox" value="Y" checked="checked" class="user-success"></input>
                    Notify customer
                </label>
            </a>
        </li>
        <li>
            <a>
                <label>
                    <input type="checkbox" value="Y" checked="checked" class="user-success"></input>
                    Notify department
                </label>
            </a>
        </li>
    </ul>
</div>